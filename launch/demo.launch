<launch>
    <arg name="portname1" default="/dev/ttyUSB0"/>
    <group ns="dobot1">
        <node pkg="dobot" name="dobot_server1" type="DobotServer" args="$(arg portname1)" />
        <node pkg="dobot" name="dobot_client1" type="Dobot_controller.py"/>
    </group>
    <arg name="portname2" default="/dev/ttyUSB1"/>
    <group ns="dobot2">
        <node pkg="dobot" name="dobot_server2" type="DobotServer" args="$(arg portname2)" />
        <node pkg="dobot" name="dobot_client2" type="Dobot_controller.py"/>
    </group>
</launch>
